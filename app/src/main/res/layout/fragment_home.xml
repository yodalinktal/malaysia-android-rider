<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.OrderFragment">

    <com.bsmart.pos.rider.base.utils.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        tools:ignore="MissingConstraints">
    </com.bsmart.pos.rider.base.utils.HeaderView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/orderZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/fromZone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/customFromInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/textTitle"
                            android:text="customer,telephone"
                            android:layout_alignParentTop="true"/>

                        <TextView
                            android:id="@+id/callFromInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="call"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/addressFromInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:layout_marginRight="40dp"
                            android:text="Axis Business Campus,No 13A 13B Jalan 225,Section 51A, Petaling Jaya,46100 Selangor."
                            />
                        <ImageView
                            android:id="@+id/fromNav"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_nav"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="1dp"
                    android:background="@color/bgDivider"></View>

                <LinearLayout
                    android:id="@+id/toZone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/customerToInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/textTitle"
                            android:text="to,telephone"
                            android:layout_alignParentTop="true"/>

                        <TextView
                            android:id="@+id/callToInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="call"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/addressToInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:layout_marginRight="40dp"
                            android:text="Axis Business Campus,No 13A 13B Jalan 225,Section 51A, Petaling Jaya,46100 Selangor." />

                        <ImageView
                            android:id="@+id/toNav"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/icon_nav"
                            android:padding="5dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/addressToZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="60dp"
                        android:layout_alignParentTop="true">

                        <TextView
                            android:id="@+id/createTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Post Time:2020-02-02 09:00"/>

                        <TextView
                            android:id="@+id/orderNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textColor="@color/textTitle"
                            android:text="Order NO:98377271823"/>

                        <TextView
                            android:id="@+id/pickTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textColor="@color/textTitle"
                            android:text="Pick Time:2020-02-02 10:00"/>

                        <TextView
                            android:id="@+id/postType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textColor="@color/textTitle"
                            android:text="Post Type:File"/>

                        <TextView
                            android:id="@+id/sizeWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:textColor="@color/textTitle"
                            android:text="Size Weight: 0.1~5kg"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/cancel_button"
                        android:gravity="center"
                        android:text="Reset"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnAccept"
                        android:layout_weight="3"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/login_button"
                        android:gravity="center"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>